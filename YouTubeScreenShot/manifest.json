{
  "name": "YouTubeScreenShot",
  "description": "ワンクリックでYouTubeのスクショを撮るよ。",
  "author": "akasaka",
  "version": "1.1.5",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "js": ["src/script.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "commands"
  ],
  "commands": {
    "screenshot": {
      "description": "スクリーンショットを保存"
    },
    "backward-1000": {
      "description": "1秒戻る"
    },
    "backward-100": {
      "description": "0.1秒戻る"
    },
    "backward-1f": {
      "description": "1フレーム戻る"
    },
    "forward-1f": {
      "description": "1フレーム進む"
    },
    "forward-100": {
      "description": "0.1秒進む"
    },
    "forward-1000": {
      "description": "1秒進む"
    }
  }
}