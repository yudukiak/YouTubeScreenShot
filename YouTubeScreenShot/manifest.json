{
  "name": "YouTubeScreenShot",
  "description": "ワンクリックでYouTubeのスクショを撮るよ。",
  "author": "akasaka",
  "version": "1.1.1",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "js": ["src/script.js"],
      "css": ["src/styles.css"],
      "run_at": "document_end"
    }
  ]
}